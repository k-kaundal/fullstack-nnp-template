# Application
NODE_ENV=development
PORT=3001

# Database - Local Development (use individual params)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=fullstack_app
DATABASE_SYNC=false

# Database Seeding
# Auto-seed database on app startup (true/false)
# Automatically enabled for development/staging environments
# Set to 'true' to force seeding in other environments
AUTO_SEED=false

# Database - Production (use DATABASE_URL for cloud providers)
# For Neon, Supabase, Railway, Render, etc.
# DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Cache
CACHE_TTL=60000
CACHE_MAX_ITEMS=100

# Rate Limiting Configuration
# Set RATE_LIMIT_ENABLED=false to disable rate limiting entirely
RATE_LIMIT_ENABLED=true

# Default Throttler (General API endpoints)
# TTL in milliseconds (300000 = 5 minutes, 60000 = 1 minute)
# MAX is number of requests allowed within TTL period
# Development defaults: 2000 requests per 5 minutes
# Production recommendation: 100 requests per 1 minute
RATE_LIMIT_DEFAULT_TTL=300000
RATE_LIMIT_DEFAULT_MAX=2000

# Strict Throttler (Sensitive operations like delete, bulk operations)
# Use lower limits for more sensitive endpoints
# Development defaults: 500 requests per 5 minutes
# Production recommendation: 10 requests per 1 minute
RATE_LIMIT_STRICT_TTL=300000
RATE_LIMIT_STRICT_MAX=500

# Auth Throttler (Login/Register/Password reset endpoints)
# Higher TTL, lower MAX to prevent brute force attacks
# Development defaults: 100 attempts per 30 minutes
# Production recommendation: 5 attempts per 15 minutes
RATE_LIMIT_AUTH_TTL=1800000
RATE_LIMIT_AUTH_MAX=100

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-use-long-random-string
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Configuration (for Swagger documentation)
API_URL_LOCAL=http://localhost:3001
API_URL_PRODUCTION=https://your-api.vercel.app
API_CONTACT_NAME=Your Name
API_CONTACT_URL=https://github.com/yourusername
API_CONTACT_EMAIL=your.email@example.com

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=src/logs
LOG_MAX_FILES=30d

# Sentry Error Monitoring
SENTRY_ENABLED=false
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0
SENTRY_SERVER_NAME=your-server-name
APP_VERSION=1.0.0

# Mail Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-specific-password
MAIL_FROM=your-email@gmail.com
MAIL_SECURE=true

# Note: For Gmail, you need to:
# 1. Enable 2-factor authentication on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password as MAIL_PASS (not your regular password)
