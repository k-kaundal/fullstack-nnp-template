# Application
NODE_ENV=development
PORT=3001

# Database - Local Development (use individual params)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=fullstack_app
DATABASE_SYNC=false

# Database - Production (use DATABASE_URL for cloud providers)
# For Neon, Supabase, Railway, Render, etc.
# DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Cache
CACHE_TTL=60000
CACHE_MAX_ITEMS=100

# JWT (for future auth implementation)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com
