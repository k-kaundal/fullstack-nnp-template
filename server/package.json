{
  "name": "server",
  "version": "1.0.0",
  "description": "Production-ready NestJS backend with PostgreSQL, TypeORM, and comprehensive API features",
  "author": "K K Kaundal <kk@kaundal.vip>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/k-kaundal/fullstack-nnp-template.git",
    "directory": "server"
  },
  "bugs": {
    "url": "https://github.com/k-kaundal/fullstack-nnp-template/issues"
  },
  "homepage": "https://github.com/k-kaundal/fullstack-nnp-template#readme",
  "keywords": [
    "nestjs",
    "typescript",
    "postgresql",
    "typeorm",
    "rest-api",
    "swagger",
    "jwt",
    "authentication",
    "crud",
    "backend",
    "nodejs",
    "express",
    "api",
    "fullstack-template",
    "production-ready"
  ],
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:setup": "./test/setup-test-db.sh && jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "yarn typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "yarn typeorm -- migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "yarn typeorm -- migration:revert -d src/config/typeorm.config.ts",
    "seed": "ts-node -r tsconfig-paths/register src/database/seeders/seed.cli.ts run",
    "seed:rollback": "ts-node -r tsconfig-paths/register src/database/seeders/seed.cli.ts rollback",
    "seed:clear": "ts-node -r tsconfig-paths/register src/database/seeders/seed.cli.ts clear",
    "vercel:build": "nest build",
    "vercel:dev": "vercel dev",
    "vercel:deploy": "vercel --prod"
  },
  "dependencies": {
    "@apollo/server": "4.11.2",
    "@nestjs/apollo": "12.2.0",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "12.2.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^10.0.1",
    "@sentry/node": "^10.38.0",
    "@sentry/profiling-node": "^10.38.0",
    "@types/ua-parser-js": "^0.7.39",
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.8.1",
    "graphql": "^16.12.0",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "ua-parser-js": "^2.0.8",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cache-manager": "^5.0.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^7.0.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.18.2"
  },
  "resolutions": {
    "lodash": ">=4.17.23"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
