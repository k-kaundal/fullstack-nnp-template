{
  "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
  "*.{json,md,yml,yaml}": ["prettier --write"],
  "*.{css,scss}": ["prettier --write"],
  "server/**/*.{ts,tsx}": [
    "cd server && eslint --fix",
    "cd server && prettier --write"
  ],
  "client/**/*.{ts,tsx}": [
    "cd client && eslint --fix",
    "cd client && prettier --write"
  ]
}
