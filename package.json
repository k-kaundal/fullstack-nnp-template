{
  "name": "fullstack-nnp-template",
  "version": "1.0.0",
  "description": "Production-ready fullstack template with NestJS, Next.js, and PostgreSQL",
  "scripts": {
    "setup": "./setup.sh",
    "install:all": "cd server && yarn install && cd ../client && yarn install",
    "dev:server": "cd server && yarn start:dev",
    "dev:client": "cd client && yarn dev",
    "build:server": "cd server && yarn build",
    "build:client": "cd client && yarn build",
    "test:server": "cd server && yarn test",
    "lint:server": "cd server && yarn lint",
    "lint:client": "cd client && yarn lint",
    "format:server": "cd server && yarn format",
    "format:client": "cd client && yarn format",
    "format:all": "yarn format:server && yarn format:client",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d"
  },
  "keywords": [
    "fullstack",
    "nestjs",
    "nextjs",
    "postgresql",
    "typeorm",
    "typescript",
    "tailwindcss",
    "rest-api",
    "swagger",
    "react",
    "nodejs",
    "template",
    "boilerplate",
    "production-ready",
    "crud",
    "authentication",
    "dark-mode",
    "monorepo"
  ],
  "author": "K K Kaundal <kk@kaundal.vip>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/k-kaundal/fullstack-nnp-template.git"
  },
  "bugs": {
    "url": "https://github.com/k-kaundal/fullstack-nnp-template/issues"
  },
  "homepage": "https://github.com/k-kaundal/fullstack-nnp-template#readme",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
